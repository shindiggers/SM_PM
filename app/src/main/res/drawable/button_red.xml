<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ff9a0000" android:endColor="#ffaa0000" android:angle="270.0" />
            <stroke android:width="3dp" android:color="#ff111111" />
            <corners android:radius="3dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ffef7500" android:endColor="#ffff850b" android:angle="270.0" />
            <stroke android:width="3dp" android:color="#ffff850b" />
            <corners android:radius="3dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ffba0404" android:endColor="#ffca1414" android:angle="270.0" />
            <stroke android:width="3dp" android:color="#ff111111" />
            <corners android:radius="3dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
