    <style name="DialogTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <!--color of title text and action button of dialog-->
        <item name="android:textColor">@color/black_theme_text</item>
        <!--color of dialog message text-->
        <item name="android:textColorPrimary">@color/black_theme_text</item>
        <!-- color of unselected radio buttons in dialog-->
